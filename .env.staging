# Staging Environment Variables
# Copy this file to .env.local for staging deployment

# Supabase Configuration
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:[password]@db.[staging-project-ref].supabase.co:5432/postgres

# Application Configuration
VITE_APP_ENV=staging
VITE_APP_NAME="Warehouse Stock System (Staging)"
VITE_APP_VERSION=1.0.0-staging

# API Configuration
VITE_API_BASE_URL=https://staging-api-domain.com/api
VITE_API_TIMEOUT=30000

# Feature Flags (Enable all features for testing)
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_PRINTING=true
VITE_ENABLE_BARCODE_SCANNING=true
VITE_ENABLE_BATCH_OPERATIONS=true

# Security Configuration
VITE_ENABLE_AUDIT_TRAIL=true
VITE_SESSION_TIMEOUT=1800000
VITE_MAX_LOGIN_ATTEMPTS=10

# Performance Configuration
VITE_CACHE_TIMEOUT=60000
VITE_MAX_CONCURRENT_REQUESTS=5
VITE_PAGINATION_SIZE=20

# Monitoring and Logging (More verbose for staging)
VITE_ENABLE_ERROR_REPORTING=true
VITE_LOG_LEVEL=debug
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/staging-project-id

# Print Configuration
VITE_PRINTER_HOST=staging-printer
VITE_PRINTER_PORT=9100
VITE_STICKER_WIDTH=32
VITE_STICKER_HEIGHT=25

# Testing Configuration
VITE_ENABLE_TEST_DATA=true
VITE_MOCK_EXTERNAL_SERVICES=true